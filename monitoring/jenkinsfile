pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Docker Compose if Missing') {
            steps {
                script {
                    def composeCheck = sh(script: 'docker compose version || true', returnStatus: true)
                    if (composeCheck != 0) {
                        error("‚ùå Docker Compose v2 is not available.")
                    } else {
                        echo "‚úÖ Docker Compose v2 is available."
                    }
                }
            }
        }

        stage('Deploy Prometheus + Grafana') {
            steps {
                dir('monitoring') {
                    echo "üì¶ Deploying monitoring stack..."
                    sh 'docker compose down || true'
                    sh 'docker compose up -d --build'
                }
            }
        }

        stage('Validate Monitoring Services') {
            steps {
                script {
                    echo "‚è≥ Waiting for services to start..."
                    sleep 10

                    def HOST_IP = "127.0.0.1" // try replacing with actual IP if needed
                    def prometheusStatus = sh(script: "curl -s -L --connect-timeout 5 -o /dev/null -w '%{http_code}' http://${HOST_IP}:9090", returnStdout: true).trim()
                    def grafanaStatus = sh(script: "curl -s -L --connect-timeout 5 -o /dev/null -w '%{http_code}' http://${HOST_IP}:3000", returnStdout: true).trim()

                    echo "üì° Prometheus status: HTTP $prometheusStatus"
                    echo "üì° Grafana status: HTTP $grafanaStatus"

                    if (!['200', '302'].contains(prometheusStatus)) {
                        error("‚ùå Prometheus not reachable (HTTP $prometheusStatus)")
                    }
                    if (!['200', '302'].contains(grafanaStatus)) {
                        error("‚ùå Grafana not reachable (HTTP $grafanaStatus)")
                    }

                    echo "‚úÖ Prometheus & Grafana are up and running"
                }
            }
        }
    }

    post {
        always {
            echo 'üîö Monitoring pipeline completed.'
        }
    }
}
