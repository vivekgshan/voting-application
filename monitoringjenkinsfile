pipeline {
    agent any

    environment {
        GRAFANA_DASHBOARDS_DIR = 'monitoring/grafana/dashboards'
        GRAFANA_PROVISIONING_DIR = 'monitoring/grafana/provisioning/dashboards'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Docker Compose if Missing') {
            steps {
                script {
                    def composeCheck = sh(script: 'docker compose version || true', returnStatus: true)
                    if (composeCheck != 0) {
                        error("❌ Docker Compose v2 is not available.")
                    } else {
                        echo "✅ Docker Compose v2 is available."
                    }
                }
            }
        }

        stage('Copy Grafana Dashboards') {
            steps {
                script {
                    echo "📁 Ensuring Grafana dashboard directories exist..."
                    sh """
                        mkdir -p ${GRAFANA_DASHBOARDS_DIR}
                        mkdir -p ${GRAFANA_PROVISIONING_DIR}
                    """
                    echo "✅ Dashboard folders are set."
                }
            }
        }

        stage('Deploy Prometheus + Grafana') {
            steps {
                dir('monitoring') {
                    echo "📦 Deploying monitoring stack..."
                    sh 'docker compose down || true'
                    sh 'docker compose up -d --build'
                }
            }
        }

        stage('Validate Monitoring Services') {
            steps {
                script {
                    echo "⏳ Waiting for services to become healthy..."

                    def waitForHealthy = { container, maxRetries = 10 ->
                        def status = ""
                        for (int i = 1; i <= maxRetries; i++) {
                            status = sh(
                                script: "docker inspect -f '{{.State.Health.Status}}' ${container} || echo unknown",
                                returnStdout: true
                            ).trim()
                            echo "🔍 ${container} health status: ${status}"
                            if (status == "healthy") return
                            sleep 5
                        }
                        error("❌ ${container} did not become healthy. Final status: ${status}")
                    }

                    waitForHealthy('prometheus')
                    waitForHealthy('grafana')

                    echo "✅ Prometheus & Grafana are up and healthy"
                }
            }
        }
    }

    post {
        always {
            echo '🔚 Monitoring pipeline completed.'
        }
    }
}
